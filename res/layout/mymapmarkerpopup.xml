<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:layout_width="200dip"
    android:layout_height="100dip"
    android:minWidth="200dip"
    android:orientation="horizontal"
    android:paddingBottom="0dip"
    android:paddingLeft="1dip"
    android:paddingRight="1dip"
    android:paddingTop="0dip" >

    <View
        android:id="@+id/balloon_task_priority"
        android:layout_width="@dimen/item_task_view_priority_width"
        android:layout_height="100dip"
        android:background="#99cc00" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/item_task_padding" >

        <TextView
            android:id="@+id/balloon_task_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balloon_task_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- <ImageView
        android:id="@+id/close_img_button"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:src="@drawable/balloon_overlay_close" /> -->

</LinearLayout>